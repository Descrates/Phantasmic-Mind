using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Henry : MonoBehaviour{

	//variables
	public int HP = 100;
	public float defense = 10f;
	private int attackType = 0;
	private int defenseType = 0;
	public int enemyTestHP = 100;
	public bool After = false;
	//switches for buffs



	void Update(){
		double attack = Random.Range(7f, 10f);
		switch(defenseType){
		case 1:
			defense = (defense - 1.33f);
			break;
		default:
			defense = 10f;
			break;
		}


		switch (attackType) {
		case 1:
			attack = (attack * 1.5);
			After = true;
			break;
		case 2:
			attack = (attack * 2);
			After = true;
			break;
		default:
			attack = Random.Range(7, 10);
			break;
		}
	}


	//buffs
	//fear
	//GUI


}
