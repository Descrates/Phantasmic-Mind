var enemyHealth = 1;
var buff = 1;
var debuff = 1;
var playerDamage = 1;
var enemyDefense = 1;
var buffAmount = 1;
var debuffAmount = 1;

if (isEnemyHit) {
  if (buff && debuff) {
    enemyHealth -= ((playerDamage * buffAmount * debuffAmount) / (enemyDefense));
  } else if (buff) {
    enemyHealth -= ((playerDamage * buffAmount) / (enemyDefense));
  } else if (debuff) {
    enemyHealth -= ((playerDamage * debuffAmount) / (enemyDefense));
  } else {
    enemyHealth = enemyHealth - (playerDamage / enemyDefense);
  }
}
